{
    "manifest_version": 3,
    "name": "Simple Gemini Chat",
    "version": "1.0",
    "description": "A basic chat interface powered by the Gemini API via a secure proxy.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png" 
    },
    "permissions": [
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "http://localhost:3000/*",
        "<all_urls>"
    ]
    ,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ]
}